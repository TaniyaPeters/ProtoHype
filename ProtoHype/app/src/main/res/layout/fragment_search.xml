<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/find_plu_background">

    <EditText
        android:id="@+id/search_text"
        android:layout_width="233dp"
        android:layout_height="37dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="99dp"
        android:background="#80000000"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="@string/title_search"
        android:includeFontPadding="false"
        android:inputType="number"
        android:selectAllOnFocus="false"
        android:textColor="#E9DDDD"
        android:textColorHint="#E6978888"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PLU_TEXT"
        android:autofillHints="" />

    <TextView
        android:id="@+id/PLU_TEXT"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="8dp"
        android:background="#80000000"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="@string/please_enter_a_plu"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorTextDarkBG"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/view_profile_button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="98dp"
        android:background="@color/colorAccent"
        android:text="@string/title_search"
        android:textColor="@color/colorTextDarkBG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_text" />

    <Button
        android:id="@+id/barcode_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorAccent"
        android:fontFamily="@font/roboto_bold"
        android:text="Scan Barcode"
        android:textColor="@color/colorTextDarkBG"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_button" />
</android.support.constraint.ConstraintLayout>